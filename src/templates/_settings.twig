{# @var plugin \brightlabs\craftsalesforce\Salesforce #}
{# @var settings \brightlabs\craftsalesforce\models\Settings #}

{% extends "_layouts/cp.twig" %}
{% import '_includes/forms.twig' as forms %}

{% set title = "Settings"|t('salesforce') %}
{% set selectedSubnavItem = 'settings' %}
{% set fullPageForm = true %}

{% block content %}

{{ actionInput('salesforce/settings/save') }}

{{ forms.autosuggestField({
  first: true,
  label: 'API Version',
  name: 'salesforceApiVersion',
  instructions: 'Use a version >v60.0'|t('salesforce'),
  value: settings.salesforceApiVersion,
  required: true,
  suggestEnvVars: true
}) }}

{{ forms.autosuggestField({
  first: true,
  label: 'Instance URL',
  name: 'salesforceInstanceUrl',
  value: settings.salesforceInstanceUrl,
  required: true,
  suggestEnvVars: true
}) }}

{{ forms.autosuggestField({
  first: true,
  label: 'Username',
  name: 'salesforceUsername',
  value: settings.salesforceUsername,
  required: true,
  suggestEnvVars: true
}) }}

{{ forms.autosuggestField({
  first: true,
  label: 'Password',
  name: 'salesforcePassword',
  value: settings.salesforcePassword,
  required: true,
  suggestEnvVars: true
}) }}

{{ forms.autosuggestField({
  first: true,
  label: 'Client Id',
  name: 'salesforceClientId',
  value: settings.salesforceClientId,
  required: true,
  suggestEnvVars: true
}) }}

{{ forms.autosuggestField({
  first: true,
  label: 'Bearer token',
  name: 'bearerToken',
  value: settings.bearerToken,
  required: true,
  suggestEnvVars: true
}) }}
{% endblock %}
