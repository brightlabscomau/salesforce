      }) }}

      {{ forms.textField({
        label: 'Sector'|t('salesforce'),
        id: 'sector',
        name: 'sector',
        value: assignment.sector,
        required: true,
        errors: assignment.getErrors('sector'),
        readonly: true,
      }) }}

      {{ forms.textField({
        label: 'Country'|t('salesforce'),
        id: 'country',
        name: 'country',
        value: assignment.country,
        required: true,
        errors: assignment.getErrors('country'),
        readonly: true,
      }) }}

      {{ forms.textField({
        label: 'Publish'|t('salesforce'),
        id: 'publish',
        name: 'publish',
        value: assignment.publish,
        required: true,
        errors: assignment.getErrors('publish'),
        readonly: true,
      }) }}
